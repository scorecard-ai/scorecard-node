{
  "dxt_version": "0.1",
  "name": "scorecard-ai-mcp",
  "version": "2.1.0",
  "description": "The official MCP Server for the Scorecard API",
  "author": {
    "name": "Scorecard",
    "email": "team@scorecard.io"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/scorecard-ai/scorecard-node.git"
  },
  "homepage": "https://github.com/scorecard-ai/scorecard-node/tree/main/packages/mcp-server#readme",
  "documentation": "https://docs.scorecard.io/api-reference/overview",
  "server": {
    "type": "node",
    "entry_point": "${__dirname}/index.js",
    "mcp_config": {
      "command": "node",
      "args": ["${__dirname}/index.js"],
      "env": {
        "SCORECARD_API_KEY": "${user_config.SCORECARD_API_KEY}"
      }
    }
  },
  "user_config": {
    "SCORECARD_API_KEY": {
      "title": "api_key",
      "description": "",
      "required": true,
      "type": "string"
    }
  },
  "tools_generated": true,
  "compatibility": {
    "runtimes": {
      "node": ">=18.0.0"
    }
  },
  "keywords": ["api"]
}
